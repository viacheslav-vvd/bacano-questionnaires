<div class="relative">
  <%= text_field_tag "questions[#{question.id}]", answer_value(@result, question.id),
                     class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight 
                             focus:outline-none focus:shadow-outline' %>
</div>

<% if @validation_errors && @validation_errors[question.id.to_s] %>
  <% if @validation_errors[question.id.to_s].keys.first == :presence %>
    <span class="block text-sm text-red-400">Value cannot be blank</span>
  <% else %>
    <span class="block text-sm text-red-400">
      Length must be between <%= question.min_value %> and <%= question.max_value %>
    </span>
  <% end %>
<% end %>
